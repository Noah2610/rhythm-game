{
    "name": "rhythm-game",
    "version": "0.0.0",
    "description": "Browser rhythm game",
    "author": "Noah Rosenzweig",
    "license": "MIT",
    "scripts": {
        "start": "yarn run build:app && yarn run build:serve && yarn run serve",
        "dev": "( yarn run watch:app & yarn run watch:serve )",
        "build:app": "tsc-bundle tsconfig.json --outFile public/bundle.js",
        "watch:app": "yarn run build:app --watch",
        "build:serve": "tsc-bundle tsconfig.server.json --outFile server.js",
        "serve": "node server.js",
        "watch:serve": "nodemon -x 'yarn run build:serve && yarn run serve' -w server.ts"
    },
    "dependencies": {
        "express": "^4.17.1"
    },
    "devDependencies": {
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "tslint": "^6.1.3",
        "typescript": "^4.0.5",
        "typescript-bundle": "^1.0.17"
    }
}
